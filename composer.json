{
    "name": "vincentbean/laravel-plausible",
    "description": "Laravel Plausible",
    "keywords": [
        "VincentBean",
        "laravel",
        "laravel-plausible"
    ],
    "homepage": "https://github.com/vincentbean/laravel-plausible",
    "license": "MIT",
    "authors": [
        {
            "name": "Vincent Bean",
            "email": "info@vincentbean.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.4",
        "illuminate/contracts": "^9.0|^10.0"
    },
    "require-dev": {
        "laravel/pint": "^1.7",
        "nunomaduro/larastan": "^2.5",
        "phpstan/phpstan-mockery": "^1.1",
        "phpunit/phpunit": "^10.1",
        "orchestra/testbench": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "VincentBean\\Plausible\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "VincentBean\\Plausible\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "VincentBean\\Plausible\\LaravelPlausibleServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan",
        "style": "pint --test",
        "quality": [
            "@test",
            "@analyse",
            "@style"
        ],
        "fix-style": "pint"
    }
}
